root = true

[*]
insert_final_newline = true
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
tab_width = 4

[{Makefile,go.mod,go.sum,*.go,.gitmodules}]
indent_style = tab
indent_size = 8
tab_width = 8

[*.md]
trim_trailing_whitespace = false
eclint_indent_style = unset

[*.yml]
indent_size = 2
tab_width = 2

